.container{
  width: 100%;
  height: 100%;
}
.container .sign{
  color: red;
}
.container .input_view{
  width: 100%;
  height: 150rpx;
  margin-top:25rpx;
  border-bottom: 1rpx solid #c5c2c2;
}
.input_view .text{
  margin-left:30rpx ;
  font-size: 30rpx;
}
.input{
  border: 1rpx solid #f5f5f5;
  width: 92%;
  height: 70rpx;
  margin-left:30rpx;
  margin-top: 20rpx;
  background-color:#f5f5f5;
  font-size: 29rpx;
}
.placeholder-style{
  font-size: 29rpx;
  margin-left: 20rpx;
}
.submit{
  display: flex;
  flex-direction: row;
}
.submit .button_change{
  width: 90%;
  background:linear-gradient(to right,#0385f5,#17b4db);
  border: none;
  color: white;
  padding: 20rpx 64rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  margin-top: 30rpx;
  border-radius:20rpx ;
  height: 80rpx;
}
