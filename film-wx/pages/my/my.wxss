.bg{
  height: 150px;
  background-color: #ffffff;
}
.header{
  display: flex;
  flex-direction: column;
}
.headIcon{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: auto;
  margin-top: 10rpx;
}
.headIcon text{
  margin-top: 10rpx;
}
.header image{
  border-radius: 50%;
}
.hr{
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.item{
  display: flex;
  flex-direction: row;
}
.title{
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}
.detail{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
.logout{
  width: 100%;
  height: 150rpx;
}
page .logout button{
  margin-top: 85rpx;
  width: 80%;
  height: 90rpx;
  border-radius: 50rpx;
  background:linear-gradient(to right,#247238,#17b4db);
  display: flex;
  flex-direction: column;
  font-weight: 500;
}