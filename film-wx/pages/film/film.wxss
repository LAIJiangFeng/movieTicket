/* 侧边栏 */
.sidebar {
  background: rgba(57, 59, 59, 0.3);
  box-shadow: 4rpx 4rpx 12px rgba(236, 233, 233, 0.3);
  display: block;
  font-size: 16px;
  font-weight: 400;
  height: 100%;
  left: 0;
  position: fixed;
  overflow: auto;
  transform: translate(-600rpx,0);
  transition: transform .3s;
  top: 0;
  width: 400rpx;
  z-index: 100;
}
/* 侧边栏展示 */
.sidebar.show {
  transform: translate(0,0);
}
.sidebar-shade {
  background: rgba(0,0,0,.3);
  display: none;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 99;
}
